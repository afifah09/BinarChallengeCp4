<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentSchedule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/pink">

        <ImageView
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/judul_acara"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/judul"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/col_judul"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pancil"/>
        <TextView
            android:id="@+id/tambah_peserta"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/peserta"
            android:textSize="15dp"/>
        <Spinner
            android:id="@+id/spinner_peserta"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/peserta"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Peserta"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/col_peserta"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/add_user"/>
        <TextView
            android:id="@+id/text_waktu"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tanggal"
            android:textSize="15dp"/>
        <Button
            android:id="@+id/btn_pilih"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pilih"
            android:background="@null"
            android:backgroundTint="@color/dark_grey"/>
        <TextView
            android:id="@+id/deskrip"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desk"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/col_deskrip"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/deskripsi"/>
        <Button
            android:id="@+id/save_acara"
            android:layout_marginTop="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:background="@null"
            android:backgroundTint="@color/pink"/>

    </LinearLayout>

</LinearLayout>